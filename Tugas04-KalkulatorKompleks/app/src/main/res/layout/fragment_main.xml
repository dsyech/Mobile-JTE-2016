<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.tugas04_kalkulatorkompleks.MainActivityFragment"
    tools:showIn="@layout/content_main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/real1"
        android:width="90dp"
        android:layout_above="@+id/real2"
        android:layout_toLeftOf="@+id/txtHasil"
        android:layout_toStartOf="@+id/txtHasil"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imaj1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/imaj1"
        android:width="90dp"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/real2"
        android:width="90dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/real1"
        android:layout_alignStart="@+id/real1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/real2"
        android:layout_toLeftOf="@+id/imaj1"
        android:layout_toStartOf="@+id/imaj1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/imaj2"
        android:width="90dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/imaj1"
        android:layout_alignStart="@+id/imaj1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="i"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imaj1"
        android:layout_alignEnd="@+id/imaj1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="i"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/imaj2"
        android:layout_alignRight="@+id/imaj2"
        android:layout_alignEnd="@+id/imaj2" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnOperasi"
        android:entries="@array/operasi"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hasil..."
        android:id="@+id/txtHasil"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/spnOperasi"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btnSamaDengan"
        android:layout_below="@+id/spnOperasi"
        android:layout_centerHorizontal="true"
        android:onClick="onClickOperasi" />

</RelativeLayout>
